<h1> Contact </h1>

<em> Use this form to contact me about whatever you would like. Please keep it appropriate, though. </em>

<% if user_signed_in? %>

	<div class="form"> 

		<% if @message.errors.any? %>
			<div id="error-message" class="container-fluid"> 
				<strong> <%= pluralize(@message.errors.count, "error") %> encountered: Failed to create message. </strong> 
				<ul>
					<% @message.errors.full_messages.each do |message| %>
						<li> <%= message %> </li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<%= bootstrap_form_for @message do |f| %>

			<% if @user.email.nil? or @user.email == "" %>
				<p>
					<%= f.email_field :user_email, placeholder: "exampleman@example.com", :label => "Your Email" %>
				</p>
			<% end %>

			<p>
				<%= f.text_field :subject %>
			</p>

			<p>
				<%= f.text_area :body, :rows => "20" %>
			</p>

			<p>
				<%= f.submit "Send", :class => "btn btn-success" %>
			</p>

		<% end %>

	</div>

<% else %>

	<br><br>
	<div class="alert alert-warning">
		<%= link_to 'Sign in', new_user_session_path %> or <%= link_to 'create account', new_user_registration_path %> to leave a message.
	</div>

<% end %>