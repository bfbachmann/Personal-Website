<h2>Change your password</h2>

<div class="form">

  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.password_field :password, autofocus: true, autocomplete: "off", :label => "New Password", :placeholder => "Minimum: " + @minimum_password_length.to_s + " characters" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", :label => "Confirm new password" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", :class => "btn btn-success" %>
    </div>
  <% end %>

  <br>
  <%= render "devise/shared/links" %>

</div>