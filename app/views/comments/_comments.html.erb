<div class="container-fluid content">

	<h4> Comments: <h4>

	<%- if user_signed_in? %>

		<%= bootstrap_form_for([@article, @comment]) do |f| %>

			<p>
				<%= f.text_area :body, :placeholder => "Maximum: 140 characters", :label => "Leave a Comment:" %>
			</p>
			
			<p>
				<%= f.submit :class => "btn btn-success"%>
			</p> 

		<% end %>

	<% else %>

		<div class="alert alert-warning">
			<%= link_to 'Sign in', new_user_session_path %> or <%= link_to 'create account', new_user_registration_path %> to comment.
		</div>
		
	<% end %>

	<hr>

	<% @article.comments.each do |comment| %>
		<div class="container-fluid">
			<% if User.find_by(:id => comment.user_id).try(:admin?) %>
				<p> <strong> <%= comment.commenter %> </strong> (Admin) </p>
			<% else %>
				<p> <strong> <%= comment.commenter %> </strong> </p>
			<% end %>
			<p> 
				<%= comment.body %> 
				<% if user_signed_in? and comment.user_id == current_user.id %> 
					<%= link_to 'Remove', [comment.article, comment], method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'}, :id => "delete-comment" %>
				<% end %>
			</p>
			<hr>
		</div>
	<% end %>

</div>