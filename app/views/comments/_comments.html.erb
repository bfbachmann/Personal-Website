<div class="container-fluid content">

	<h4> Comments: <h4>

	<%= bootstrap_form_for([@article, @comment]) do |f| %>
		<p>
			<%= f.text_field :commenter, :placeholder => "Maximum: 15 characters" %> 
		</p>

		<p>
			<%= f.text_area :body, :placeholder => "Maximum: 140 characters" %>
		</p>
		
		<p>
			<%= f.submit :class => "btn btn-success"%>
		</p> 

	<% end %>

	<hr>

	<% @article.comments.each do |comment| %>
		<div class="container-fluid">
			<p> <strong> <%= comment.commenter %> </strong> </p>
			<p> 
				<%= comment.body %> 
				<%= link_to 'Remove', [comment.article, comment], method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'}, :id => "delete-comment" %>
			</p>
			<hr>
		</div>
	<% end %>

</div>