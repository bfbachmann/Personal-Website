<h2> Articles </h2>

<% @articles.each do |article| %>

	<div class="container-fluid">
		<div class="col-sm-2">
			<h3> <strong> Title: </strong> </h3>
			<p> <strong> Text: </strong> </p>
		</div>

		<div class="col-sm-10 content">
			<h3>
				<%= article.title %> 
			</h3>
			<p> 
				<%= article.text %> 
			</p>
		</div>
	</div>

	<hr> 

<% end %>

