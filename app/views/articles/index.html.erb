<% if current_user.try(:admin?) %>
	<%= link_to '', new_article_path, :class => "btn btn-default glyphicon glyphicon-plus", :id => "plus-button" %>
<% end %>

<h1> Articles </h1>

<% if @articles.count == 0 %>
	<p> <em> Sorry, it doesn't look like there are any articles here </em></p>
<% end %>

<% @articles.each do |article| %>

	<div class="container-fluid article-info">

		<div class="content">
			<h3>
				<%= link_to article.title, article_path(article) %>
				<small class="timestamp"> <%= article.updated_at.to_date.strftime("%v") %> | <%= article.comments.count %> comments  </small>
			</h3>
			<%= raw(article.text) %>
		</div>

	</div>

	<hr> 

<% end %>

