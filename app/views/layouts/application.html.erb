<!DOCTYPE html>
<html>
<head>
	<title>Blog</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>

	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans">
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

</head>

<body>

<nav class="navbar navbar-custom navbar-fixed-top">
	<div class="container-fluid">
		<div class="navbar-header">
		  <a class="navbar-brand" href="/welcome/index"> Home </a>
		</div>
		<ul class="nav navbar-nav">
			<li> <%= link_to 'Articles', articles_path %> </li> 
			<li> <%= link_to 'About', static_pages_about_path %> </li> 
			<li> <%= link_to 'Projects', static_pages_projects_path %> </li> 
		</ul>

		<div class="nav navbar-center">
			<%- if user_signed_in? %>
			  <li> Signed in as <strong> <%= current_user.display_name %>
				<% if current_user.try(:admin?) %>
					(Admin)
				<% end %>
				</strong>
			  </li>
			<% end %>
		</div>

		<ul class="nav navbar-nav navbar-right">

			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Accounts <span class="caret"></span></a>
				<ul class="dropdown-menu">
					
					<%- if not user_signed_in? %>
						<li> <%= link_to 'Log In', new_user_session_path %> </li>
						<li role="separator" class="divider"></li>
					<% end %>

					<%- if not user_signed_in? %>
						<li> <%= link_to 'Create Account', new_user_registration_path %> </li>
					<% end %>

					<%- if user_signed_in? %>
						<li> <%= link_to 'Edit Account', edit_user_registration_path %> </li>
					<% end %>

					<%- if user_signed_in? %>
						<li role="separator" class="divider"></li>
						<li> <%= link_to('Log Out', destroy_user_session_path, :method => :delete) %> </li>
					<% end %>
				</ul>
			</li>

			<li> <%= link_to '', static_pages_contact_path, :class => "glyphicon glyphicon-send" %> </li> 
		</ul>
	</div>
</nav>

<div class="center-column container-fluid">
	<% if notice %>
		<p class="alert alert-success"><%= notice %></p>
	<% end %>
	<% if alert %>
		<p class="alert alert-danger"><%= alert %></p>
	<% end %>
	<%= yield %>
</div>

</body>
</html>
