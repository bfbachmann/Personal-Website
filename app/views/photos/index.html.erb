<%= content_for :plus_button do %>
	<%= link_to '', new_photo_path, :class => "btn btn-default glyphicon glyphicon-plus", :id => "plus-button" %>
<% end %>


<div class="center container-fluid">

	<% if @photos.empty? %>
		<em> Sorry, it doesn't look like there are any images here. </em>
	<% else %>

		<% @photos.each_with_index do |photo, index| %>

			<% if index % 3 == 0 %>
				<div class="row">
			<% end %>

			<div class="col-sm-4">
				<div class="center container-fluid photo-area">

					<div class="image-box"> 
						<% if not @active_ids.include? photo.id.to_s %>
							<%= link_to '', photo_path(photo), method: :delete, data: { confirm: 'Are you sure you want to delete this photo?' }, :class => 'glyphicon glyphicon-trash trash-icon btn btn-default' %>

							<%= link_to image_tag(photo.image_url, :size => "260x180"), photo.image_url.url(:square), target: '_blank' %> 
						<% else %>
							<%= link_to image_tag(photo.image_url, :size => "260x180"), photo.image_url.url(:square), target: '_blank', :title => "photo is associated with an article" %> 
						<% end %>

					</div>
				</div>
			</div>

			<% if index % 3 == 2 or index == @photos.count - 1 %>
				</div>
			<% end %>

		<% end %>
	<% end %>

</div>
