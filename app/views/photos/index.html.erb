<h1>Images</h1>

<% @photos.each do |photo| %>

	<div class="container-fluid center photo-area">
		<h4> 
			<%= photo.title %>
		</h4>
		<%= link_to '', photo_path(photo), method: :delete, data: { confirm: 'Are you sure you want to delete this photo?' }, :class => 'glyphicon glyphicon-trash' %>
		<%= link_to image_tag(photo.image, :size => "260x180"), photo.image.url, target: '_blank' %>
	</div>

<% end %>