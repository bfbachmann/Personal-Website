<div class="images-center-column">
	<div class="images-header">
		<h1>Images</h1>
		<%= link_to '', new_photo_path, :class => "btn btn-default glyphicon glyphicon-plus add-image", :id => "plus-button" %>
	</div>

	<div class="center container-fluid">
		<% @photos.each_with_index do |photo, index| %>

			<% if index % 3 == 0 %>
				<div class="row">
			<% end %>

			<div class="col-sm-4">
				<div class="container-fluid center photo-area">
					<h4> 
						<%= photo.title %>
					</h4>

					<div class="image-box"> 
						<%= link_to '', photo_path(photo), method: :delete, data: { confirm: 'Are you sure you want to delete this photo?' }, :class => 'glyphicon glyphicon-trash trash-icon btn btn-default' %>
						<%= link_to image_tag(photo.image, :size => "260x180"), photo.image.url, target: '_blank' %> 
					</div>
				</div>
			</div>

			<% if index % 3 == 2 or index == @photos.count - 1 %>
				</div>
			<% end %>

		<% end %>
	</div>
</div>